@{
    ViewData["Title"] = "Login";

    /* Desactiva el container del layout SOLO para esta página */
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - ComSaude</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: url('https://images.pexels.com/photos/7089010/pexels-photo-7089010.jpeg')
                        no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .overlay {
            background: rgba(0, 0, 0, 0.45);
            position: fixed;
            inset: 0;
            backdrop-filter: blur(3px);
        }

        .login-container {
            position: relative;
            z-index: 10;
            width: 420px;
            margin: 7% auto;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(14px);
            border-radius: 18px;
            padding: 40px;
            box-shadow: 0 0 25px rgba(0,0,0,0.25);
            color: #fff;

            opacity: 0;
            transform: translateY(25px);
            transition: all 0.8s ease-out;
        }

        .login-container.show {
            opacity: 1;
            transform: translateY(0);
        }

        .form-control {
            background: rgba(255,255,255,0.25);
            border: none;
            color: #fff;
            height: 45px;
            border-radius: 8px;
        }

        .form-control::placeholder {
            color: #e0e0e0;
        }

        .form-control:focus {
            background: rgba(255,255,255,0.35);
            color: #fff;
            box-shadow: none;
        }

        .btn-login {
            width: 100%;
            background-color: #0a9252;
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 10px;
            transition: 0.3s ease;
        }

        .btn-login:hover {
            background-color: #087543;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.25);
        }
    </style>
</head>

<body>

    <div class="overlay"></div>

    <div class="login-container" id="loginBox">

        <h2 class="text-center mb-4">
            <i class="bi bi-person-circle"></i> Login
        </h2>

        @if (ViewBag.Erro != null)
        {
                <div class="alert alert-danger">@ViewBag.Erro</div>
        }

        <form asp-action="Login" method="post">

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" class="form-control" placeholder="Digite seu email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input name="senha" type="password" class="form-control" placeholder="Digite sua senha" />
            </div>

            <button type="submit" class="btn btn-login">Entrar</button>

        </form>

    </div>

    <script>
        window.onload = function () {
            document.getElementById("loginBox").classList.add("show");
        };
    </script>

</body>
</html>
