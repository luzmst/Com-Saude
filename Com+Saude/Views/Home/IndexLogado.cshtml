@model IEnumerable<Com_Saude.Models.Especialidade>

@{
    ViewData["Title"] = "Bem-vindo";
}

<div class="container mt-5">

    <!-- Título de boas-vindas -->
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="color: #0a7c72;">
            Bem-vindo, @User.Identity.Name!
        </h1>
        <p class="text-muted fs-5">
            Você está logado no sistema clínico.
        </p>
    </div>

    <h4 class="fw-semibold text-start mb-4">Especialidades da Clínica</h4>

    @if (Model != null && Model.Any())
    {
            <div class="row">
            @foreach (var esp in Model)
            {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm border-0" style="border-radius: 16px;">
                                <div class="card-body text-center py-4">

                                    <div class="mb-3">
                                        <i class="bi bi-heart-pulse-fill" style="font-size: 2.4rem; color: #0db1a5;"></i>
                                    </div>

                                    <h5 class="fw-bold text-dark">@esp.Descricao</h5>

                                    <span class="badge bg-primary mt-3">Ativo</span>

                                </div>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="alert alert-warning mt-4">
                Nenhuma especialidade cadastrada.
            </div>
    }

</div>
