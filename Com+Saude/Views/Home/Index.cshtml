@model IEnumerable<Com_Saude.Models.Especialidade>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">

    <div class="text-center mb-4">
        <h1 class="fw-bold" style="color: #0a7c72;">Bem-vindo ao Sistema Clínico Com + Saude</h1>
        <p class="text-muted">Confira abaixo as especialidades disponíveis em nossa clínica</p>
    </div>

    <h4 class="fw-semibold text-start mb-3">Especialidades</h4>

    @if (Model.Any())
    {
            <div class="row">
            @foreach (var esp in Model)
            {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm border-0" style="border-radius: 16px;">
                                <div class="card-body text-center py-4">

                                    <div class="mb-3">
                                        <i class="bi bi-heart-pulse-fill" style="font-size: 2.4rem; color: #0db1a5;"></i>
                                    </div>

                                    <h5 class="fw-bold text-dark">@esp.Descricao</h5>

                                </div>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="alert alert-warning mt-4">
                Nenhuma especialidade cadastrada.
            </div>
    }
</div>
