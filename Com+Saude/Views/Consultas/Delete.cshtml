@model Com_Saude.Models.Consulta

@{
    ViewData["Title"] = "Excluir Consulta";
}

<h1>Excluir Consulta</h1>

<h3>Tem certeza que deseja excluir esta consulta?</h3>

<div>
    <h4>Consulta</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Model.Agendamento?.NomePaciente
        </dd>

        <dt class="col-sm-2">
            Diagnóstico
        </dt>
        <dd class="col-sm-10">
            @Model.Diagnostico
        </dd>

        <dt class="col-sm-2">
            Receita
        </dt>
        <dd class="col-sm-10">
            @Model.Receita
        </dd>

        <dt class="col-sm-2">
            Observações
        </dt>
        <dd class="col-sm-10">
            @Model.Observacoes
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdConsulta" />

        <button type="submit" class="btn btn-danger">
            Excluir
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Voltar para a Lista
        </a>
    </form>
</div>
