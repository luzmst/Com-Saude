@model IEnumerable<Com_Saude.Models.Medico>

@{
    ViewData["Title"] = "Médicos";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="bi bi-person-badge"></i> Médicos
        </h2>

        <a asp-action="Create" class="btn btn-success px-4">
            <i class="bi bi-plus-lg"></i> Novo Médico
        </a>
    </div>

    <div class="row g-4">

        @foreach (var item in Model)
        {
                <div class="col-md-6">
                    <div class="card shadow border-0 rounded-4 p-3">

                        <div class="row align-items-center">

                            <!-- FOTO CUADRADA IZQUIERDA -->
                            <div class="col-4 text-center">
                                <img src="@item.UrlFoto"
                                     onerror="this.src='https://via.placeholder.com/140x140?text=Sem+Foto'"
                                     class="shadow"
                                     style="width:140px; height:140px; object-fit:cover; border-radius:12px;" />
                            </div>

                            <!-- DATOS DERECHA -->
                            <div class="col-8">

                                <h4 class="fw-bold text-success">@item.Nome</h4>

                                <p class="mb-1">
                                    <i class="bi bi-envelope text-success"></i>
                                    <strong>Email:</strong> @item.Email
                                </p>

                                <p class="mb-1">
                                    <i class="bi bi-telephone text-success"></i>
                                    <strong>Telefone:</strong> @item.Telefone
                                </p>

                                <p class="mb-1">
                                    <i class="bi bi-calendar text-success"></i>
                                    <strong>Nascimento:</strong> @item.DataNascimento.ToString("dd/MM/yyyy")
                                </p>

                                <p class="mb-1">
                                    <i class="bi bi-file-earmark-person text-success"></i>
                                    <strong>CPF:</strong> @item.CPF
                                </p>

                                <p class="mb-2">
                                    <i class="bi bi-person text-success"></i>
                                    <strong>Sexo:</strong> @item.Sexo
                                </p>

                                <p class="fw-semibold text-success">
                                    <i class="bi bi-hospital"></i>
                                @item.Especialidade?.Descricao
                                </p>

                            </div>

                        </div>

                        <!-- BOTONES -->
                        <div class="mt-3 d-flex justify-content-between">

                            <a asp-action="Details" asp-route-id="@item.IdMedico"
                               class="btn btn-outline-primary w-100 me-2">
                                <i class="bi bi-eye"></i> Detalhes
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.IdMedico"
                               class="btn btn-outline-warning w-100 me-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.IdMedico"
                               class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Excluir
                            </a>

                        </div>

                    </div>
                </div>
        }

    </div>

</div>
