@model IEnumerable<Com_Saude.Models.Recepcionista>

@{
    ViewData["Title"] = "Recepcionistas";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-success">
            <i class="bi bi-people-fill"></i> Lista de Recepcionistas
        </h2>

        <a asp-action="Create" class="btn btn-success px-4 py-2">
            <i class="bi bi-plus-circle"></i> Novo Recepcionista
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-success">
                    <tr>
                        <th>Foto</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Nascimento</th>
                        <th>CPF</th>
                        <th>Sexo</th>
                        <th>Turno</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>

                                <!-- FOTO -->
                                <td>
                                    <img src="@item.UrlFoto"
                                         onerror="this.src='https://via.placeholder.com/50?text=Foto'"
                                         class="rounded-circle shadow-sm"
                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                </td>

                                <td>@item.Nome</td>
                                <td>@item.Email</td>
                                <td>@item.Telefone</td>
                                <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                                <td>@item.CPF</td>
                                <td>@item.Sexo</td>
                                <td>@item.Turno</td>

                                <td class="text-center">

                                    <a asp-action="Details" asp-route-id="@item.IdRecepcionista"
                                       class="btn btn-sm btn-primary me-1 px-3 py-1">
                                        <i class="bi bi-eye"></i> Visualizar
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.IdRecepcionista"
                                       class="btn btn-sm btn-warning text-white me-1 px-3 py-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.IdRecepcionista"
                                       class="btn btn-sm btn-danger px-3 py-1">
                                        <i class="bi bi-trash"></i> Excluir
                                    </a>

                                </td>

                            </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
