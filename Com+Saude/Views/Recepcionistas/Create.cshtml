@model Com_Saude.Models.Recepcionista

@{
    ViewData["Title"] = "Cadastrar Recepcionista";
}

<style>
    .foto-preview {
        width: 140px;
        height: 140px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #0db1a5;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }
</style>

<div class="container mt-4">

    <div class="card shadow-sm border-0 rounded-4">

        <div class="card-header text-white"
             style="background: linear-gradient(135deg, #0db1a5, #0a7c72); border-radius: 18px 18px 0 0;">
            <h3 class="mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-person-vcard"></i>
                Novo Recepcionista
            </h3>
        </div>

        <div class="card-body p-4">

            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-4">

                    <!-- FOTO Y UPLOAD -->
                    <div class="col-md-4 text-center">

                        <img id="previewFoto"
                             src="/fotos/default.png"
                             class="foto-preview" />

                        <p class="text-muted small mt-2">Pré-visualização da foto</p>

                        <label class="form-label fw-semibold">Enviar Foto</label>
                        <input type="file" name="FotoUpload" accept="image/*"
                               class="form-control shadow-sm"
                               onchange="previewImage(this)" />
                        <small class="text-muted">Formatos permitidos: JPG, PNG</small>
                    </div>

                    <!-- DADOS -->
                    <div class="col-md-8">

                        <div class="row">

                            <div class="col-md-6">
                                <label asp-for="Nome" class="form-label fw-semibold"></label>
                                <input asp-for="Nome" class="form-control shadow-sm" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control shadow-sm" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mt-3">
                                <label asp-for="Telefone" class="form-label fw-semibold"></label>
                                <input asp-for="Telefone" class="form-control shadow-sm" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mt-3">
                                <label asp-for="DataNascimento" class="form-label fw-semibold"></label>
                                <input asp-for="DataNascimento" type="date" class="form-control shadow-sm" />
                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mt-3">
                                <label asp-for="CPF" class="form-label fw-semibold"></label>
                                <input asp-for="CPF" class="form-control shadow-sm" />
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mt-3">
                                <label asp-for="Sexo" class="form-label fw-semibold"></label>
                                <select asp-for="Sexo" class="form-select shadow-sm">
                                    <option value="">Selecione...</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Feminino</option>
                                </select>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mt-3">
                                <label asp-for="Turno" class="form-label fw-semibold"></label>
                                <select asp-for="Turno" class="form-select shadow-sm">
                                    <option value="">Selecione...</option>
                                    <option value="Manhã">Manhã</option>
                                    <option value="Tarde">Tarde</option>
                                    <option value="Noite">Noite</option>
                                </select>
                                <span asp-validation-for="Turno" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                </div>

                <!-- BOTÕES -->
                <div class="mt-4 d-flex gap-3">

                    <a asp-action="Index"
                       class="btn btn-outline-secondary px-4 shadow-sm rounded-pill">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>

                    <button type="submit"
                            class="btn text-white px-4 shadow-sm rounded-pill"
                            style="background: linear-gradient(135deg, #0db1a5, #0a7c72);">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>

                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
            <script>
                function previewImage(input) {
                    if (input.files && input.files[0]) {
                        let reader = new FileReader();
                        reader.onload = e => {
                            document.getElementById('previewFoto').src = e.target.result;
                        };
                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
