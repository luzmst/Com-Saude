@model Com_Saude.Models.TipoUsuario

@{
    ViewData["Title"] = "Cadastrar Tipo de Usuário";
}

<h2 class="mb-4">Cadastrar Tipo de Usuário</h2>

<div class="card shadow-lg border-0 rounded-4 p-4">

    <form asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-4">
            <label asp-for="DescricaoTipoUsuario" class="form-label fw-semibold">Descrição do Tipo de Usuário</label>
            <input asp-for="DescricaoTipoUsuario" class="form-control shadow-sm" placeholder="Digite a descrição" />
            <span asp-validation-for="DescricaoTipoUsuario" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3">
            <button type="submit"
                    class="btn text-white px-4 py-2"
                    style="background: linear-gradient(135deg, #0db1a5, #0a7c72); border-radius: 10px;">
                <i class="bi bi-check-circle"></i> Salvar
            </button>

            <a asp-action="Index"
               class="btn btn-outline-secondary px-4 py-2"
               style="border-radius: 10px;">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
