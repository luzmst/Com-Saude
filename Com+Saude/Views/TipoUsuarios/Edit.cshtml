@model Com_Saude.Models.TipoUsuario

@{
    ViewData["Title"] = "Editar Tipo de Usuário";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white"
             style="background: linear-gradient(135deg, #0db1a5, #0a7c72); border-radius: 18px 18px 0 0;">
            <h3 class="mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-pencil-square"></i> Editar Tipo de Usuário
            </h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdTipoUsuario" />

                <div class="mb-3">
                    <label asp-for="DescricaoTipoUsuario" class="form-label fw-semibold">Descrição</label>
                    <input asp-for="DescricaoTipoUsuario" class="form-control shadow-sm" placeholder="Digite a descrição" />
                    <span asp-validation-for="DescricaoTipoUsuario" class="text-danger"></span>
                </div>

                <div class="mt-4 d-flex gap-3">
                    <button type="submit"
                            class="btn text-white px-4 py-2 shadow-sm"
                            style="background: linear-gradient(135deg, #0db1a5, #0a7c72); border-radius: 10px;">
                        <i class="bi bi-check-circle me-1"></i> Salvar
                    </button>

                    <a asp-action="Index"
                       class="btn btn-secondary px-4 py-2 shadow-sm"
                       style="border-radius: 10px;">
                        <i class="bi bi-arrow-left me-1"></i> Voltar
                    </a>
                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
