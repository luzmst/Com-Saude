@model Com_Saude.Models.Especialidade

@{
    ViewData["Title"] = "Editar Especialidade";
}

<div class="container mt-4">

    <h1 class="fw-bold text-success mb-3">
        <i class="bi bi-pencil-square"></i> Editar Especialidade
    </h1>

    <div class="card shadow-sm border-0 rounded-4 p-4">

        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="IdEspecialidade" />

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label fw-semibold">Descrição</label>
                <input asp-for="Descricao" class="form-control rounded-3" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success px-4 rounded-3">
                    <i class="bi bi-check2-circle"></i> Salvar
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2 px-4 rounded-3">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
