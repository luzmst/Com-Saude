@model IEnumerable<Com_Saude.Models.Especialidade>

@{
    ViewData["Title"] = "Especialidades";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-success">
            <i class="bi bi-ui-checks-grid"></i> Especialidades
        </h1>

        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            <i class="bi bi-plus-circle"></i> Nova Especialidade
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4">

        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-success">
                    <tr>
                        <th>Descrição</th>
                        <th class="text-center" style="width: 240px;">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td class="fw-semibold">@item.Descricao</td>

                                <td class="text-center">

                                    <a asp-action="Edit" asp-route-id="@item.IdEspecialidade"
                                       class="btn btn-outline-warning btn-sm px-3 me-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.IdEspecialidade"
                                       class="btn btn-outline-info btn-sm px-3 me-1">
                                        <i class="bi bi-info-circle"></i> Detalhes
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.IdEspecialidade"
                                       class="btn btn-outline-danger btn-sm px-3">
                                        <i class="bi bi-trash"></i> Excluir
                                    </a>

                                </td>
                            </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
